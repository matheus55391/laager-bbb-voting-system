  "scripts": {
    "start": "nx serve api-gateway",
    "start:dev": "concurrently --names \"API,VOTES,AGGREGATE\" --prefix-colors \"blue,green,yellow\" \"nx serve api-gateway\" \"nx serve votes-service\" \"nx serve aggregate-service\"",
    "start:debug": "nx serve api-gateway --inspect",
    "start:prod": "node dist/apps/api-gateway/main.js",
    "start:gateway": "nx serve api-gateway",
    "start:votes": "nx serve votes-service",
    "start:aggregate": "nx serve aggregate-service",
    "build": "nx build api-gateway",
    "build:prod": "nx build api-gateway --configuration=production",
    "build:all": "nx run-many --target=build --projects=api-gateway,votes-service,aggregate-service",
    "test": "nx test api-gateway",
    "test:watch": "nx test api-gateway --watch",
    "test:cov": "nx test api-gateway --coverage",
    "test:e2e": "nx e2e api-gateway-e2e",
    "lint": "nx lint api-gateway",
    "lint:fix": "nx lint api-gateway --fix",
    "format": "prettier --write \"apps/**/*.ts\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "private": true,
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
